# TransKeep Backend Environment Variables
# Copy this file to .env and update with your values

# Application
APP_NAME=TransKeep
APP_VERSION=0.1.0
DEBUG=false

# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/transkeep

# Redis
REDIS_URL=redis://localhost:6379

# S3 / MinIO (for local development)
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
AWS_BUCKET_NAME=transkeep-files
S3_ENDPOINT_URL=http://localhost:9000

# For production AWS S3, remove S3_ENDPOINT_URL and use real credentials:
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_BUCKET_NAME=your-bucket-name
# S3_ENDPOINT_URL=  # Leave empty for real AWS S3

# Authentication
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# External APIs
DEEPL_API_KEY=your_deepl_api_key
CLAUDE_API_KEY=your_claude_api_key

# OpenTelemetry (for local Jaeger)
OTEL_EXPORTER_JAEGER_AGENT_HOST=localhost
OTEL_EXPORTER_JAEGER_AGENT_PORT=6831
